! Clear modifiers, so we can assign other things to them
clear lock
clear control
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5

! Left control is mode switch
keycode 37 = Mode_switch

! Capslock is left control
keycode 66 = Control_L

! Menu is hyper
keycode 135 = Hyper_L

! Dummy for xcape
keycode 255 = Escape

! Add back the modifier keys, assign hyper to mod3 
add control = Control_L Control_R
add mod1 = Alt_L Alt_R Meta_L
add mod2 = Num_Lock
add mod3 = Hyper_L
add mod4 = Super_L Super_R
add mod5 = Mode_switch ISO_Level3_Shift

! Mode switch + hjkl is arrow keys
keycode 43 = h H Left h h
keycode 44 = j J Down j j
keycode 45 = k K Up k k
keycode 46 = l L Right l l
