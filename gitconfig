[color]
    ui = true
[push]
    default = tracking

[alias]
    glog = log     --color=always --all --graph --topo-order --pretty='format:%Cgreen%h%Creset %s %C(black bold)(by %an)%Creset%C(yellow bold)%d%Creset%n'
    slog = log --oneline --decorate --all
    st = status -sb
    sdiff = diff --cached
    ci = commit
    amend = commit --amend -C HEAD
    pull = pull --ff-only

[merge]
    tool = threesome
    defaultToUpstream = true

[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true

[include]
    path = ~/.gitconfig_local
